{
  "name": "dropkiller-daily-migration",
  "version": "1.0.0",
  "description": "Daily migration script for Dropkiller v3 - migrates all products from old database to new architecture",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/main.ts",
    "migrate": "bun src/scripts/daily-migration-standalone.ts",
    "migrate:complete": "bun src/scripts/complete-migration.ts",
    "migrate:complete:test": "TEST_MODE=true bun src/scripts/complete-migration.ts",
    "test": "TEST_MODE=true bun src/scripts/daily-migration-standalone.ts",
    "dev": "bun --watch src/main.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "dropkiller",
    "migration",
    "database",
    "postgresql",
    "drizzle-orm",
    "bun"
  ],
  "author": "Scalboost Team",
  "license": "MIT",
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "bun-types": "^1.3.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.2.13",
    "node": ">=18.0.0"
  }
}